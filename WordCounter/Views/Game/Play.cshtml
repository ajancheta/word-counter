@using WordCounter.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Word Counter</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link href="https://fonts.googleapis.com/css?family=Gugi" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg" class="sticky-top" id="indexNav">
      <img src="https://image.flaticon.com/icons/svg/1299/1299903.svg" width="40" height="40" alt="hashtag">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
          <a class="isDisabled" href="about-FAQ.html">Word Counter</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/game/view">Entries</a>
          </li>
        </ul>
      </div>
    </nav>

    <h1 class="welcome">WORD COUNTER</h1>

    <h1>Results:</h1>

    @if (RepeatCounter.Result == 0)
    {
      <h3>Sentence:</h3> <h3>@RepeatCounter.SentenceInput</h3>

      <h3>Word:</h3> <h3>@RepeatCounter.WordInput</h3>

      <h3>Your word does not appear in your sentence</h3>
    }

    @if (RepeatCounter.Result != 0)
    {
      <h3>Word: @RepeatCounter.WordInput</h3>

      <h3>Sentence: @RepeatCounter.SentenceInput</h3>

      <h3>Your word appears @RepeatCounter.Result time(s) in that sentence.</h3>

    }

    <h3 class="pinkWords"><a href="/game/new">Try again</a>
    <a href="/">Go Back Home</a></h3>

    <form action="/game/view" method="post">
      <button type="submit" name="button">View all entries</button>
    </form>

  </body>
