@using WordCounter.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Word Counter</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link href="https://fonts.googleapis.com/css?family=Gugi" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-lg" class="sticky-top" id="indexNav">
      <img src="https://image.flaticon.com/icons/png/512/1045/1045903.png" width="40" height="40" alt="hashtag">
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
          <a class="nav-link" href="/game/new">Word Counter</a>
          </li>
          <li class="nav-item">
            <a class="isDisabled" href="/game">Results</a>
          </li>
        </ul>
      </div>
    </nav>

    <h1 class="welcome">WORD COUNTER RESULTS</h1>

    @if (@Model.Count == 0)
    {
      <h3>No words have been added yet!</h3>
    }

    @if (@Model.Count != 0)
    {
      @foreach (var counter in @Model)
      {

      <h3>Word: @counter.WordInput</h3>

      <h3>Sentence: @counter.SentenceInput</h3>

      <h3 class="results">Your word "@counter.WordInput" appears @counter.WordSearch() time(s) in the sentence that you entered.</h3>

    }
  }

    <form action="/game/delete" method="post">
    <button type="submit" id="clear">CLEAR ALL</button>
    </form>

  </body>
