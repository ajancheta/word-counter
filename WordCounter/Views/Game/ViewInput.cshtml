@using WordCounter.Models;

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Word Counter</title>
    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css'>
    <link href="https://fonts.googleapis.com/css?family=Gugi" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>

  <body>
    <h1>List of your entries:</h1>
    @if (@Model.Count == 0)
    {
      <h1>Nothing has been added yet!</h1>
    }

    @foreach (var wordcounter in Model)
    {
      <h3>@wordcounter.GetAll();</h3>
    }

    <form action="/game/delete" method="post">
      <button type="submit" name="button">Clear all entries</button>
    </form>

  </body>
</html>
